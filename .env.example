# API key required in Authorization header (Bearer <value> or raw value)
PRESIGN_API_KEY=your-api-key-here

# Presigned URL expiry in seconds (default 604800 = 7 days)
PRESIGN_EXPIRY_SECONDS=604800

# Railway S3 bucket credentials (from Railway bucket settings)
S3_ENDPOINT=https://your-bucket-endpoint.railway.app
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1

# Optional: set to true if your S3-compatible endpoint uses path-style URLs
# S3_FORCE_PATH_STYLE=false

# Port (Railway sets PORT automatically)
# PORT=3000
